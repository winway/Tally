<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp">

    <ImageView
        android:id="@+id/lvitem_bill_detail_chart_type_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        tools:src="@mipmap/ic_yanjiu_fs" />

    <TextView
        android:id="@+id/lvitem_bill_detail_chart_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/lvitem_bill_detail_chart_type_iv"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="烟酒茶" />

    <TextView
        android:id="@+id/lvitem_bill_detail_chart_percent_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="16sp"
        tools:text="22.3%" />

    <TextView
        android:id="@+id/lvitem_bill_detail_chart_money_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        tools:text="¥123.4" />

</RelativeLayout>