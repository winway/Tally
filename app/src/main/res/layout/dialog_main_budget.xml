<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp">

    <TextView
        android:id="@+id/dialog_main_budget_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/set_budget"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/dialog_main_budget_cancel_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/ih_error" />

    <TextView
        android:id="@+id/dialog_main_budget_symbol_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_main_budget_title_tv"
        android:layout_marginTop="10dp"
        android:text="Â¥"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/dialog_main_budget_input_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/dialog_main_budget_symbol_tv"
        android:layout_toEndOf="@id/dialog_main_budget_symbol_tv"
        android:backgroundTint="@color/white"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/dialog_main_budget_ok_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_main_budget_input_et"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_dialog_ok_background"
        android:text="@string/ok"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@null" />
</RelativeLayout>